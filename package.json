{
  "name": "vtron",
  "version": "0.2.2",
  "files": [
    "distlib",
    "distlib/*.css"
  ],
  "main": "distlib/vtron.mjs",
  "module": "distlib/vtron.mjs",
  "types": "distlib/src/packages/plug.d.ts",
  "style": "distlib/style.css",
  "exports": {
    ".": {
      "import": "./distlib/vtron.mjs",
      "require": "./distlib/vtron.umd.js"
    },
    "./distlib/style.css": {
      "import": "./distlib/style.css",
      "require": "./distlib/style.css"
    }
  },
  "scripts": {
    "dev": "vite --host",
    "build": "vue-tsc --noEmit && vite build",
    "serve": "vite preview",
    "build-lib-tsc": "vue-tsc --noEmit && vite build --config vitelib.config.ts",
    "build-lib": "vite build --config vitelib.config.ts",
    "tsc": "vue-tsc",
    "tag": "node script/auto_tag.js"
  },
  "dependencies": {
    "vue": "^3.2.37",
    "vue3-sfc-loader": "^0.8.4"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.2.5",
    "@types/node": "^16.11.0",
    "@types/rollup-plugin-visualizer": "^4.2.1",
    "@vitejs/plugin-vue": "^3.0.3",
    "@vue/compiler-sfc": "^3.2.20",
    "rollup-plugin-typescript2": "^0.34.1",
    "rollup-plugin-visualizer": "^5.8.0",
    "sass": "^1.45.1",
    "typescript": "^4.6.4",
    "vite": "^3.0.9",
    "vite-plugin-dts": "^0.8.3",
    "vite-plugin-style-import": "^1.2.1",
    "vue-tsc": "^0.40.1"
  }
}
