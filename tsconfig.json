{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "distlib",
    "typeRoots": ["./types","./node_modules/@types"],
    "baseUrl": ".",
    "paths":{
      "@/*": ["src/*"],
      "@structure/*": ["src/packages/window/structure/*"],
      "@builtin/*": ["src/packages/window/builtin/*"],
      "@state/*": ["src/packages/window/state/*"],
      "@libs/*": ["src/packages/window/libs/*"],
     },
     "plugins": [
      {
          "transform": "@zerollup/ts-transform-paths",
      }
    ]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"]
}
